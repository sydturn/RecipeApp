<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#85e0e0</item>
        <item name="colorPrimaryDark">#350066</item>
        <item name="colorAccent">#9933ff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomHeaderStyle">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6600cc</item>/>
    </style>

    <style name="CustomHeader2Style">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#6600cc</item>/>
    </style>
</resources>
